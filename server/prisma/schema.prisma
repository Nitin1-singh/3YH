generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
}

model user {
  id                      String   @id @default(uuid())
  username                String   @unique
  password                String
  is_admin                Boolean  @default(false)
  competiton_participated String[]
}

model competition {
  id          String   @id @default(uuid())
  overview    String
  description String
  start_date  DateTime
  end_date    DateTime
  test_data   Bytes
  train_data  Bytes
}
